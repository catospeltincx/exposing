{% comment %} aparte student page {% endcomment %}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ student_name }} *** {{project_title}} </title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
    <body>
        <header>
      <a href="/">Practise Practise</a>
    </header>

    <aside>
      {% for student in collections.students %}
          <p>{{ student.data.student_name }}</p>
          <a
            class="student-thumb"
            href="{{ student.url }}"
            alt=""
          >
            <img src="{{ student.data.main_image }}" />
          </a>
      {% endfor %}
    </aside>

    <main>
        <p>{{ student_name }}</p>
        <p>{{ project_title }}</p>
        <p> {{ context }} </p>
        <p> {{ year }} </p>
        <img src="{{ main_image }}"/>
        <p> {{ bio }} </p>
        {% for image in images %}
        <img src="{{ image }}" alt="beschrijving van het beeld?" />
        {% endfor %}
        <p>{{ content }}</p>
        {% for link in social_links %}
        <a href="{{ link }}">{{ link }}</a>
        {% endfor %}
      </main>

    </body>
</html>